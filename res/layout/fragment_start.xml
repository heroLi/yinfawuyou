<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="#ffffff" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="140dip" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:id="@+id/viewGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/frameLayout1"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/blood_p"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/xueya_bg"
            android:drawableTop="@drawable/xueya_src"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="血压"
            android:textColor="@color/app_white" />

        <TextView
            android:id="@+id/blood_suger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/suger_bg"
            android:drawableTop="@drawable/suger_src"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="血糖"
            android:textColor="@color/app_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/blood_heart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/xinlv_bg"
            android:drawableTop="@drawable/xinlv_src"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="心率"
            android:textColor="@color/app_white" />

        <TextView
            android:id="@+id/blood_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/newdata_bg"
            android:drawableTop="@drawable/newdata_src"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="最新数据"
            android:textColor="@color/app_white" />
    </LinearLayout>

</RelativeLayout>