<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/main_layout"
    android:layout_height="45dp"
    android:background="@color/app_green" >

    <TextView
        android:id="@+id/activity_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="@string/login_title"
        android:drawableLeft="@drawable/left"
        android:textColor="@color/app_white"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/add_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="手动添加"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:textColor="@color/app_white"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/activity_top_menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/top_menu2"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/activity_top_menu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/activity_top_menu2"
        android:background="@drawable/top_menu_1"
        android:visibility="gone" />

</RelativeLayout>