<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_white"
    android:orientation="vertical" >

    <include
        android:id="@+id/top"
        layout="@layout/activity_main_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="血压"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/data1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="18dp"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/namelayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高压"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/blood_xh"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:textColor="@color/text_black"
                    android:background="@drawable/edit_bg"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmHg"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="低压"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/blood_xl"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:background="@drawable/edit_bg"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:textColor="@color/text_black"
                    android:text="100"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmHg"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xy_1"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/newdata_text_bg_no"
                    android:gravity="center"
                    android:textColor="@color/app_white"
                    android:text="理想" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xy_2"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/newdata_text_bg_no"
                    android:gravity="center"
                     android:textColor="@color/app_white"
                    android:text="正常" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xy_3"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/newdata_text_bg_no"
                    android:gravity="center"
                    android:textColor="@color/app_white"
                    android:text="偏高" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xy_4"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/newdata_text_bg_no"
                    android:gravity="center"
                    android:textColor="@color/app_white"
                    android:text="轻度" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xy_5"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/newdata_text_bg_no"
                    android:gravity="center"
                    android:textColor="@color/app_white"
                    android:text="中度" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xy_6"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:textColor="@color/app_white"
                    android:background="@drawable/newdata_text_bg_no"
                    android:gravity="center"
                    android:text="高度" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="血糖"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/data2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="18dp"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_bg"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                 android:textSize="18sp"
                android:text="血糖" />

            <TextView
                android:id="@+id/blood_t"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:background="@drawable/edit_bg"
                android:gravity="center"
                android:text="0"
                android:paddingBottom="2dp"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:text="mmol/L"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xt_1"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/newdata_text_bg_no"
                    android:gravity="center"
                    android:textColor="@color/app_white"
                    android:text="理想" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@drawable/newdata_text_bg_no"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:textColor="@color/app_white"
                    android:paddingRight="4dp"
                    android:text="可接受" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="@drawable/newdata_text_bg_no"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:textColor="@color/app_white"
                    android:paddingRight="4dp"
                    android:text="不可接受" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:textColor="@color/text_black"
            android:text="心率"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/data3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="18dp"
            android:textColor="@color/text_black"
            android:text=""
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_bg"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="心率"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/blood_lv"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:background="@drawable/edit_bg"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="0"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:text="BPM"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xl_1"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/newdata_text_bg_no"
                    android:gravity="center"
                    android:textColor="@color/app_white"
                    android:text="偏低" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xl_2"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:textColor="@color/app_white"
                    android:background="@drawable/newdata_text_bg_no"
                    android:gravity="center"
                    android:text="正常" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xl_3"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:textColor="@color/app_white"
                    android:background="@drawable/newdata_text_bg_no"
                    android:gravity="center"
                    android:text="偏高" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>